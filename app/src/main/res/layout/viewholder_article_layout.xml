<?xml version="1.0" encoding="utf-8"?>
<com.example.wanandroid.ui.home.view.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- 主体内容 -->
        <include
            android:id="@+id/included"
            layout="@layout/viewholder_included_article_layout" />

        <!-- 滑动显示内容 -->
        <TextView
            android:id="@+id/menuText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/holder_article_marginTop"
            android:background="@color/teal_200"
            android:gravity="center"
            android:text="收藏"
            android:textColor="#fff" />
    </LinearLayout>

</com.example.wanandroid.ui.home.view.SlidingMenu>